<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="stylesheet" href="/styles/home.css" />
    <link rel="stylesheet" href="/styles/results.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&ampdisplay=swap"
      rel="stylesheet"
    />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script defer src="/scripts/login.js"></script>
  </head>
    <body>
    <div class="stage">
     <div class="logo-container">
      <object class="logo" data="/images/logo.svg" type="image/svg+xml"></object>
    </div>

      <h1 class="title">
          <span class="letters"><%=title%></span>
        </span>
      </h1>
      <div class="p-link">
        <% if (visibility) { %>
        <h2> Playlist Views: <%=views%></h2>
        <%} %>
        <% if (condition1) { %>
        <a id="manage-form" href="//<%=host%>/playlist/follow/<%=id%>">Follow Playlist</a>
        <%} else if(condition1 == false && condition2) {%>
        <a id="manage-form" href="//<%=host%>/playlist/unfollow/<%=id%>">Unfollow Playlist</a>
        <%} else if(condition3) {%>
        <a id="manage-form" href="//<%=host%>/playlist/delete/<%=id%>">Delete Playlist</a>
        <%} %>
        <% if (condition4) { %>
        <a id="manage-form" href="//<%=host%>/playlist/change/toPrivate/<%=id%>">Make Playlist Private</a>
        <%} else if(condition5) { %>
        <a id="manage-form" href="//<%=host%>/playlist/change/toPublic/<%=id%>">Make Playlist Public</a>
        <%} %>
      </div>
    <div class="grid-container auto-width" id="grid-item">
      <% links.songs.forEach(function(entry) {%>
      <p class="track"><%=entry.songName%></p>
      <iframe src="https://open.spotify.com/embed/track/<%=entry.songId%>" width="300" height="80" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
      <%});%>
    </div>
      <a id="search-form-top" type="submit" value="SEARCH" href="/search">Search</a>
      <a id="playlist-form-top" type="submit" value="PLAYLIST" href="/playlist/new">Create a Playlist</a>
      <a id="home-form-top" type="submit" value="HOME" href="/user/home">Home</a>
      <a id="profile-form-top" type="submit" value="PROFILE" href="/user/profile">Profile</a>
      <a id="logout-form-top" type="submit" value="LOGOUT" href="/logout">Logout</a>


        <script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/2.0.2/anime.min.js"></script>
    </div>
